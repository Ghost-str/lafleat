{
	"compilerOptions": {
		"baseUrl": "./",
		"target": "ES6",
		"module": "ES6",
		"lib": ["DOM"],
		"checkJs": true,
		"noEmit": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"strictNullChecks": true
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["webpack.config.js"]
}
